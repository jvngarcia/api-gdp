  {
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target": "es6",
      "strict": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "resolveJsonModule": true
    },
    "include": [
      "src/**/*",
      "test/**/*",
    ],

    // Importar con @
    "baseUrl": ".",
    "paths": {
      "@controllers/*": ["src/controllers/*"],
      "@context/*": ["src/context/*"],
    }
  }
